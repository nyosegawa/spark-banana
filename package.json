{
  "name": "spark-banana",
  "version": "0.1.0",
  "private": true,
  "description": "Real-time UI annotation tool that connects to Codex CLI for instant code fixes",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "npm run dev -w example-vite-react",
    "dev:next": "npm run dev -w example-next-app",
    "build:overlay": "npm run build -w spark-banana",
    "build:bridge": "npm run build -w spark-bridge",
    "build": "npm run build:bridge && npm run build:overlay",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^28.1.0",
    "vitest": "^4.0.18"
  }
}
